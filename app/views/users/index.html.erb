<h1>Usuarios</h1>

<%= link_to "Crear nuevo usuario", new_user_path %>

<table class="listing">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Ver', user %></td>
        <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Â¿Seguro que deseas eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
