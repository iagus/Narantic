<h1>Roles</h1>

<%= link_to 'Crear nuevo rol', new_role_path, class: 'btn' %>

<hr/>

<table class="listing small">
  <thead>
    <tr>
      <th>Rol</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.role %></td>
        <td><%= link_to 'Ver', role %></td>
        <td><%= link_to 'Editar', edit_role_path(role) %></td>
        <td><%= link_to 'Eliminar', role, method: :delete, data: { confirm: 'Â¿Seguro que deseas eliminar??' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
