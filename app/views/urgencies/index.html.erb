<h1>Urgencias</h1>

<%= link_to 'Nueva urgencia', new_urgency_path, class: 'btn' %>

<hr/>

<table class="listing small">
  <thead>
    <tr class="headers">
      <th>Nivel</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @urgencies.each do |urgency| %>
      <tr>
        <td><%= urgency.level %></td>
        <td><%= link_to 'Ver', urgency %></td>
        <td><%= link_to 'Editar', edit_urgency_path(urgency) %></td>
        <td><%= link_to 'Eliminar', urgency, method: :delete, data: { confirm: 'Â¿Seguro que deseas eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
