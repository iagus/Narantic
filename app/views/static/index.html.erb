<h1>Bienvenido</h1>
<p>Últimos cambios:</p>

<div class="last-updates">

  <div class="last-update">
    <p>Últimas reservas</p>
    <% @bookings.each do |booking| %>
      <p><%= "#{booking.resource.name}" %></p>
      <p><%= "#{booking.start.day}/#{booking.start.month} al #{booking.end.day}/#{booking.end.month}" %></p>
    <% end %>
  </div>

  <div class="last-update">
    <p>Últimas incidencias agregadas</p>
    <% @tickets.each do |ticket| %>
      <p><%= "#{ticket.title}" %></p>
    <% end %>
  </div>

  <div class="last-update">
    <p>Últimos recursos agregados</p>
    <% @resources.each do |resource| %>
      <p><%= "#{resource.name}" %></p>
    <% end %>
  </div>


  <div class="last-update">
    <p>Últimos usuarios agregados</p>
    <% @users.each do |user| %>
      <p><%= "#{user.name} #{user.surname}" %></p>
    <% end %>
  </div>

</div>
