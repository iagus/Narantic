<h1>Bienvenido</h1>
<hr/>
<p>Últimos cambios:</p>

<div class="last-updates">

  <div class="last-update">
    <p>Últimas reservas</p>
    <% @bookings.each do |booking| %>
      <p><%= link_to "#{booking.resource.name}", booking_path(booking) %><br/>
      <%= "#{booking.start.day}/#{booking.start.month} al #{booking.end.day}/#{booking.end.month}" %></p>
    <% end %>
  </div>

  <div class="last-update">
    <p>Últimas incidencias agregadas</p>
    <% @tickets.each do |ticket| %>
      <p><%= link_to "#{ticket.title}", ticket_path(ticket) %></p>
    <% end %>
  </div>

  <div class="last-update">
    <p>Últimos recursos agregados</p>
    <% @resources.each do |resource| %>
      <p><%= link_to "#{resource.name}", resource_path(resource) %></p>
    <% end %>
  </div>

  <div class="last-update">
    <p>Últimos usuarios agregados</p>
    <% @users.each do |user| %>
      <p><%= link_to "#{user.name} #{user.surname}", user_path(user) %></p>
    <% end %>
  </div>

</div>
