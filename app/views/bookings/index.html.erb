
    <h1>Reservas</h1>

    <%= link_to 'Crear reserva nueva', new_booking_path, class: 'btn' %>

    <hr/>

    <table class="listing">
      <thead>
        <tr>
          <th>Recurso</th>
          <th>Usuario</th>
          <th>Comienzo</th>
          <th>Final</th>
          <th colspan="3">Opciones</th>
        </tr>
      </thead>

      <tbody>
        <% @bookings.each do |booking| %>
          <tr>
            <td><%= booking.resource.name %></td>
            <td><%= "#{booking.user.name} #{booking.user.surname}" %></td>
            <td><%= booking.start %></td>
            <td><%= booking.end %></td>
            <td><%= link_to 'Ver', booking %></td>
            <td><%= link_to 'Editar', edit_booking_path(booking) %></td>
            <td><%= link_to 'Eliminar', booking, method: :delete, data: { confirm: 'Â¿Seguro que deseas eliminar?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
