<h1>Recursos</h1>

<%= link_to 'Nuevo recurso', new_resource_path, class: 'btn' %>

<hr/>

<table class="listing medium">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.name %></td>
        <td><%= link_to 'Ver', resource %></td>
        <td><%= link_to 'Editar', edit_resource_path(resource) %></td>
        <td><%= link_to 'Eliminar', resource, method: :delete, data: { confirm: 'Â¿Seguro que deseas eliminar??' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
